<nav class="navbar navbar-expand-lg bg-white p-3 mb-4 sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/pages/home">
      <%= image_tag 'orangeLogoSmall.png', width: "180" %>
    </a>
    
    <!-- Search Form - Centered -->
    <div class="navbar-search-container">
      <%= search_form_for @browse, url: search_path, method: :get do |f|%>
        <div class="d-flex align-items-center">
          <div class="flex-grow-1 me-3">
            <%=f.search_field :address_cont, class: "form-control navbar-search-field", id: "navbar-search", placeholder: "Where are you staying? NYC, Vancouver, Tokyo..." %>
          </div>
          <div class="flex-shrink-0">
            <%= f.submit "Find Space", class: "btn btn-primary btn-cta"%>
          </div>
        </div>
      <% end %>
    </div>
    
    <!-- Navigation Menu -->
    <div class="navbar-nav-container">
      <!-- Toggle Button -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <!-- Navigation Menu -->
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav ms-auto">
          <% if !user_signed_in? %>
            <li class="nav-item">
              <a class="nav-link" href="/users/login">Log in</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/users/signup">Sign up</a>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Log out", destroy_user_session_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/users/edit">Edit Setting</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/users/<%= current_user.id %>">
                Profile <%=image_tag current_user.default_avatar, class: "img-circle avatar-small" %>
              </a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <%=current_user.name %>
              </a>
              <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li><%= link_to "Hosting List", rooms_path, class: "dropdown-item"%></li>
                <li><%= link_to "Customer Reservations", yourlisting_reservations_path, class: "dropdown-item"%></li>
                <li><hr class="dropdown-divider"></li>
                <li><%= link_to "Your Cart", your_trips_path, class: "dropdown-item"%></li>
              </ul>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</nav>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Auto focus on search field when page loads
    const searchField = document.getElementById('navbar-search');
    if (searchField) {
      searchField.focus();
    }
  });
</script>


