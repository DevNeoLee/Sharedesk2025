<div class="row">
  <div class="card  mx-auto shadow mb-5">
    <div class="card-body">
      <div class="card-title">
        <h2 class=" text-center mt-4 mb-3">Sign Up</h1>   
      </div>
      <hr>
  
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: "new_user_signup", data: { turbo: false } }) do |f| %>
        <%= render 'shared/devise_message' %>

        <div class="card m-2">
          <div class="card-body d-flex bg-light">
              <%= image_tag(resource.default_avatar, class: "avatar-large") %>  
              <div>
                <p class="m-1">*add your custom profile avatar!</p><%= f.file_field :avatar, class: "mt-5 ml-4"%>
              </div>
          </div>
        </div>
        <div class="form-label-group m-2">
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email address", id: "inputEmail"  %>
          <label for="inputEmail">Email address</label>
        </div>

        <div class="form-label-group m-2">
          <%= f.text_field :name, autocomplete: "name", class: "form-control", placeholder: "Name", id: "name"  %>
          <label for="name">Name</label>
        </div>

        <div class="form-label-group m-2">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder:"Password", id: "password"%>
          <label for="password">Password<em>(<%= @minimum_password_length %> characters minimum)</em></label>
        </div>

        <div class="form-label-group m-2">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Password_confirmation", id:"password_confirm" %>
          <label for="password_confirm">Password confirmation</label>
        </div>

        <div class="checkbox ml-2">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>
        </div>
        <div class="actions m-2">
          <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>

        <div class="text-center m-2">
          <%= render "devise/shared/links" %>
        </div>

        <div class="m-2">
        <hr>
        <div class="text-center mb-2">
          <small class="text-muted">Want to try the app? Use our demo account!</small>
        </div>
      
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin2", html: { id: "demo_user_signup", data: { turbo: false } }) do |f| %>
          <%= f.hidden_field :email, value: 'demo@email.com' %>
          <%= f.hidden_field :password, value: '111111', id: "demo_user_password_signup" %>
          <%= f.submit "ðŸš€ TRY DEMO", class: "btn btn-lg btn-success btn-block p-2"  %>    
        <% end %>
        </div>

        <hr>
        <div class="pt-3 mb-3 text-muted text-center"><a href="https://devneolee.github.io/JustinKLee/" target="_blank" style="display: inline-flex; align-items: center; gap: 8px; transition: all 0.3s ease;">Â© Justin K Lee <%= image_tag "blueplane_icon.svg", width: "25px", class: "blueplane", style: "transition: transform 0.3s ease;"%> </a> All Rights Reserved</div>
    </div>
  </div>
</div>