<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5">
    <div class="card mx-auto shadow-lg mb-5" style="border-radius: 16px; border: none;">
      <div class="card-body p-4">
        <div class="text-center mb-4">
          <h2 class="h3 mb-0" style="color: #333; font-weight: 600;">Sign Up</h2>
          <p class="text-muted mt-2 mb-0">Create your account to get started</p>
        </div>
        
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: "new_user_signup", data: { turbo: false } }) do |f| %>
          <%= render 'shared/devise_message' %>

          <!-- Avatar Section -->
          <div class="card mb-4" style="background-color: #f8f9fa; border: 2px dashed #dee2e6; border-radius: 12px;">
            <div class="card-body p-3">
              <div class="d-flex align-items-center">
                <%= image_tag(resource.default_avatar, class: "avatar-large me-3") %>  
                <div class="flex-grow-1">
                  <p class="mb-2 text-muted small">*Add your custom profile avatar!</p>
                  <%= f.file_field :avatar, class: "form-control form-control-sm" %>
                </div>
              </div>
            </div>
          </div>

          <!-- Form Fields -->
          <div class="form-label-group mb-3">
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email address", id: "inputEmail" %>
            <label for="inputEmail">Email address</label>
          </div>

          <div class="form-label-group mb-3">
            <%= f.text_field :name, autocomplete: "name", class: "form-control", placeholder: "Name", id: "name" %>
            <label for="name">Name</label>
          </div>

          <div class="form-label-group mb-3">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password", id: "password" %>
            <label for="password">Password <small class="text-muted">(<%= @minimum_password_length %> characters minimum)</small></label>
          </div>

          <div class="form-label-group mb-4">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Password confirmation", id: "password_confirm" %>
            <label for="password_confirm">Password confirmation</label>
          </div>

          <div class="mb-4">
            <%= f.submit "Create Account", class: "btn btn-primary w-100 py-2" %>
          </div>
        <% end %>

        <!-- Links Section -->
        <div class="text-center mb-4">
          <%= render "devise/shared/links" %>
        </div>

        <!-- Demo Section -->
        <div class="text-center">
          <hr class="my-4">
          <p class="text-muted mb-3 small">Want to try the app? Use our demo account!</p>
          
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: "demo_user_signup", data: { turbo: false } }) do |f| %>
            <%= f.hidden_field :email, value: 'demo@email.com' %>
            <%= f.hidden_field :password, value: '111111', id: "demo_user_password_signup" %>
            <%= f.submit "ðŸš€ TRY DEMO", class: "btn btn-success w-100 py-3" %>
          <% end %>
        </div>

        <!-- Footer -->
        <div class="text-center mt-4 pt-3">
          <div class="text-muted" style="font-size: 16px;">
            <a href="https://devneolee.github.io/JustinKLee/" target="_blank" style="display: inline-flex; align-items: center; gap: 8px; transition: all 0.3s ease; text-decoration: none;">
              Â© Justin K Lee <%= image_tag "blueplane_icon.svg", width: "25px", class: "blueplane", style: "transition: transform 0.3s ease;" %>
            </a>
            <span style="margin-left: 12px;">All Rights Reserved</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>