<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5">
    <div class="card mx-auto shadow-lg mb-5" style="border-radius: 16px; border: none;">
      <div class="card-body p-4">
        <div class="text-center mb-4">
          <h2 class="h3 mb-0" style="color: #333; font-weight: 600;">Change Your Password</h2>
          <p class="text-muted mt-2 mb-0">Enter your new password below</p>
        </div>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, data: { turbo: false } }) do |f| %>
          <%= render 'shared/devise_message' %>
          <%= f.hidden_field :reset_password_token %>

          <div class="form-label-group mb-3">
            <label for="inputPassword">
              New password
              <% if @minimum_password_length %>
                <small class="text-muted">(<%= @minimum_password_length %> characters minimum)</small>
              <% end %>
            </label>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "Enter new password", id: "inputPassword" %>
          </div>

          <div class="form-label-group mb-4">
            <label for="inputPasswordConfirm">Confirm new password</label>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm new password", id: "inputPasswordConfirm" %>
          </div>

          <div class="mb-4">
            <%= f.submit "Update Password", class: "btn btn-primary w-100 py-2" %>
          </div>
        <% end %>

        <!-- Links Section -->
        <div class="text-center mb-4">
          <%= render "devise/shared/links" %>
        </div>

        <!-- Footer -->
        <div class="text-center mt-4 pt-3">
          <div class="text-muted" style="font-size: 16px;">
            <a href="https://devneolee.github.io/JustinKLee/" target="_blank" style="display: inline-flex; align-items: center; gap: 8px; transition: all 0.3s ease; text-decoration: none;">
              Â© Justin K Lee <%= image_tag "blueplane_icon.svg", width: "25px", class: "blueplane", style: "transition: transform 0.3s ease;" %>
            </a>
            <span style="margin-left: 12px;">All Rights Reserved</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
