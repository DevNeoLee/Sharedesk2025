<div class="row justify-content-center py-5 my-5">
  <div class="col-md-6 col-lg-5">
    <div class="card mx-auto shadow-lg mb-5 py-5" style="border-radius: 16px; border: none;">
      <div class="card-body p-5">
        <div class="text-center mb-4">
          <h2 class="h3 mb-0" style="color: #333; font-weight: 600;">Forgot Your Password?</h2>
          <p class="text-muted mt-2 mb-0">Enter your email to receive reset instructions</p>
        </div>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, data: { turbo: false } }) do |f| %>
          <%= render 'shared/devise_message' %>
          
          <div class="form-label-group mb-4">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email address", id: "inputEmail" %>
            <label for="inputEmail">Email address</label>
          </div>

          <div class="mb-4">
            <%= f.submit "Send Reset Instructions", class: "btn btn-primary w-100 py-2" %>
          </div>
        <% end %>

        <!-- Links Section -->
        <div class="text-center mb-4">
          <%= render "devise/shared/links" %>
        </div>

        <!-- Footer -->
        <div class="text-center mt-4 pt-3">
          <div class="text-muted" style="font-size: 16px;">
            <a href="https://devneolee.github.io/JustinKLee/" target="_blank" style="display: inline-flex; align-items: center; gap: 8px; transition: all 0.3s ease; text-decoration: none;">
              Â© Justin K Lee <%= image_tag "blueplane_icon.svg", width: "25px", class: "blueplane", style: "transition: transform 0.3s ease;" %>
            </a>
            <span style="margin-left: 12px;">All Rights Reserved</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
