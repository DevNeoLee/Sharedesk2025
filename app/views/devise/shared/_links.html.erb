
<%- if controller_name != 'sessions' %>
  <div class="mb-2">
    <%= link_to "Log in", new_session_path(resource_name), class: "text-decoration-none", style: "color: #007bff; font-weight: 500; font-size: 16px;" %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="mb-2">
    <%= link_to "Sign up", new_registration_path(resource_name), class: "text-decoration-none", style: "color: #007bff; font-weight: 500; font-size: 16px;" %>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="mb-2">
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-decoration-none", style: "color: #6c757d; font-weight: 500; font-size: 16px;" %>
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>

<hr class="my-4">

<div class="omni-auth">
  <div class="mb-3">
    <%= link_to user_google_oauth2_omniauth_authorize_path, data: { turbo: false }, style: "text-decoration: none;" do %>
      <button type="button" class="btn btn-outline-secondary w-100 py-1 d-flex align-items-center justify-content-center gap-3 oauth-btn oauth-google" style="border: 1px solid #dee2e6; background-color: white; color: #333; font-size: 16px; font-weight: 500; min-height: 48px; transition: all 0.3s ease;">
        <%= image_tag 'google_logo.png', width: "54", height: "54", style: "object-fit: contain;" %>
        Continue with Google
      </button>
    <% end %>
  </div>
  
  <div class="mb-3">
    <%= link_to user_facebook_omniauth_authorize_path, data: { turbo: false }, style: "text-decoration: none;" do %>
      <button type="button" class="btn btn-outline-primary w-100 py-3 d-flex align-items-center justify-content-center gap-3 oauth-btn oauth-facebook" style="border: 1px solid #1877f2; background-color: #1877f2; color: white; font-size: 16px; font-weight: 500; min-height: 48px; transition: all 0.3s ease;">
        <%= image_tag 'facebook_logo.png', width: "28", height: "28", style: "object-fit: contain; transform: translateY(-3px);" %>
        Continue with Facebook
      </button>
    <% end %>
  </div>
</div>