<h1 class="pt-5 pb-5 mb-3">Customer Reservations for Your Space</h1>
<div class="row min_height_mid">
    <div class="col-md-3" style="min-width: 250px; max-width: 300px;">
        <div class="card mb-3">
            <div class="card-header">
                Reservation Summary
            </div>
            <div class="card-body">
                <div class="card-title">
                    <h5><%=Time.now.strftime("%B")%> <%= Time.now.year %></h5>
                </div>
                <div class="card-text">
                    You have total <strong class="h4 m-1"><%= @total_reservation %></strong> reservations.
                </div>
                <div class="card-text">
                    Total Sales: $ <strong class="h4 m-1"><%= @total_earning %></strong>
                </div>
            </div>
        </div>
       
    </div>
    <div class="col-md-9">
        <%# <div data-controller="infinite-scroll" data-action="scroll@window->infinite-scroll#scroll">
            <div data-target="infinite-scroll.entries"> %>
                <% @rooms_result.each do |room| %>
                    <% room.reservations.each do |reservation| %>
                        <div class="row">
                            <div class="col-md-12">
                                <%= link_to room_path(room.id) do %>
                                    <div class="card text-center mb-3 m-0 d-flex">
                                        <div class="pt-2 pb-2 m-0 bg-light d-flex">
                                            <div class="col-md-2"> 
                                                <span class="">Date</span>                            
                                            </div>         
                                            <div class="col-md-3"> 
                                                <span class="">Space</span>                                                                                                                         
                                            </div>      
                                            <div class="col-md-2">   
                                                <span class="">Total</span>                                                                                                                                                                                           
                                            </div>      
                                            <div class="col-md-3">  
                                                <span class="">Customer</span>                                                           
                                            </div> 
                                            <div class="col-md-2">   
                                                <span class="">Note</span>                                                                                                                                                                                             
                                            </div>   
                                        </div>

                                        <div class="horizontal_align d-flex">
                                            <div class="col-md-2">                           
                                                <div><%= reservation.start_date.strftime('%v')%>  </div>                                                                                         
                                            </div>         
                                            <div class="col-md-3 mt-4">                                  
                                                <% if room.images.attached? %>
                                                    <%= image_tag room.small_image(room.images[0]), class: "img-fluid", style: "border-radius: 5px" %>
                                                <% end %>                                                                                       
                                                <div class="card-title mt-2">
                                                    <%=room.listing_name %>
                                                </div>  
                                            </div>      
                                            <div class="col-md-2">                                                                                                         
                                                <div class="card-text">
                                                    <h5>$<%= reservation.total %></h5>
                                                </div>                                                                                     
                                            </div>      
                                            <div class="col-md-3">
                                                <div class="mt-2 mb-2">
                                                    <%= image_tag reservation.user.default_avatar, class: "img-circle avatar-medium", style: "width: 50px; height:50px;"%>                                                                                                                        
                                                </div> 
                                                <div class="card-text mt-2 mb-1">
                                                    <h6><%= reservation.user.name%></h6>
                                                </div>     
                                                <div class="card-text">
                                                    <h6><%= reservation.user.email%></h6>
                                                </div>                                                               
                                            </div> 
                                            <div class="col-md-2">                                                                                                         
                                                <div class="card-text">
                                                    <h5>N/A</h5>
                                                </div>                                                                                     
                                            </div>                                                                                                                          
                                        </div>
                                    </div>                
                                <% end %>            
                            </div>
                        </div>
                    <% end %>
                <% end %>
            <%# </div>
        </div> %>
    </div>
    <div data-target="infinite-scroll.pagination" class="pagination_type">
        <%== pagy_bootstrap_nav(@pagy).html_safe %>
    </div>
</div>

