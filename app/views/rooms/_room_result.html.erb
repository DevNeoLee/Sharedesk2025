<div class="col-lg-4 col-md-6 mb-4">
  <div class="room-management-card" data-room-id="<%= room.id %>">
    <!-- Card Header -->
    <div class="room-card-header">
      <h5 class="room-card-title"><%= room.listing_name %></h5>
      <div class="room-card-status">
        <span class="status-badge status-active">Active</span>
      </div>
    </div>

    <!-- Card Image -->
    <div class="room-card-image">
      <% if room.images.attached? %>
        <%= image_tag room.medium_image(room.images[0]), class: "room-image", alt: room.listing_name %>
      <% else %>
        <div class="room-image-placeholder">
          <i class="fas fa-image"></i>
          <span>No Image</span>
        </div>
      <% end %>
      
      <!-- Quick Stats Overlay -->
      <div class="room-stats-overlay">
        <div class="stat-item">
          <i class="fas fa-calendar-check"></i>
          <span><%= room.reservations.count %></span>
        </div>
        <div class="stat-item">
          <i class="fas fa-star"></i>
          <span><%= format_rating(room.average_rating) %></span>
        </div>
      </div>
    </div>

    <!-- Card Body -->
    <div class="room-card-body">
      <div class="room-location">
        <i class="fas fa-map-marker-alt text-muted me-2"></i>
        <span class="location-text"><%= room.address %></span>
      </div>
      
      <div class="room-meta">
        <div class="meta-item">
          <i class="fas fa-dollar-sign text-success"></i>
          <span class="meta-text">$<%= room.price %>/day</span>
        </div>
        <div class="meta-item">
          <i class="fas fa-users text-info"></i>
          <span class="meta-text"><%= room.capacity %> guests</span>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="room-actions">
        <div class="action-buttons">
          <%= link_to room_path(room), class: "btn btn-outline-primary btn-sm action-btn" do %>
            <i class="fas fa-eye me-1"></i>View
          <% end %>
          
          <%= link_to edit_room_path(room), class: "btn btn-outline-secondary btn-sm action-btn" do %>
            <i class="fas fa-edit me-1"></i>Edit
          <% end %>
          
          <%= button_to room_path(room), 
              method: :delete, 
              data: { confirm: "Are you sure you want to delete this workspace?" }, 
              class: "btn btn-outline-danger btn-sm action-btn" do %>
            <i class="fas fa-trash me-1"></i>Delete
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>                 