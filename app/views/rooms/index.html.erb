
<div class="container main" id="main">
  <div class="h1 m-4 pt-5 pb-5 title_font">Hosting Space List</div>
  <div class="row">
    <div class="col-md-3 mb-5">
      <div class="card shadow-sm rounded-4">
        <%= image_tag "main_image1.jpg", class: "img-fluid rounded-top" %>
        <div class="card-body">
          <div class="card-title">
            <%= link_to new_room_path do %>
              <button class="btn btn-lg btn-primary w-100" href="new_room_path">Host New Location</button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <div data-controller="infinite-scroll" data-action="scroll@window->infinite-scroll#scroll">
        <div data-infinite-scroll-target="entries">
          <div class="row g-4">
            <% @rooms_result.each do |room| %>
              <%= render 'room_result', room: room %>
            <% end %>
          </div>
        </div>
        <div data-infinite-scroll-target="pagination" class="pagination_type">
          <%== pagy_bootstrap_nav(@pagy).html_safe %>
        </div>
      </div>
    </div>
  </div>
</div>
                 