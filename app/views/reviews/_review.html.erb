<% if reviews == nil || reviews.count == 0 %>
    <div class="text-center"><h4>There is no Review yet.</h4></div>
<% else %>
    <% reviews.each do |review|%>
    <% if review.user %>
    <div class="review-card-horizontal mb-4">
        <div class="review-card-header">
            <div class="review-user-info">
                <%= image_tag review.user.default_avatar, class: "avatar-medium" %>
                <div class="review-meta">
                    <div class="review-user-name"><%= review.user.name %></div>
                    <div class="review-date"><%= review.created_at.strftime("%d-%b-%Y") %></div>
                </div>
            </div>
            <div class="review-rating">
                <div class="star-rating" data-score="<%= review.star %>"></div>
                <span class="review-rating-text"><%= format_rating(review.star) %>/5</span>
            </div>
        </div>
        <div class="review-card-body">
            <div class="review-comment"><%= review.comment %></div>
        </div>
    </div>
    <% end %>
    <% end %>
<% end %>

